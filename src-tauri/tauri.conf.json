{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gear-management-app",
  "version": "0.1.0",
  "identifier": "com.gear-management-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "title": "gear-management-app",
        "minWidth": 1015,
        "minHeight": 600,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "visible": false
      },
      {
        "width": 800,
        "height": 300,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "transparent": true,
        "decorations": false,
        "visible": false,
        "resizable": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "default": "sqlite:test.db"
    }
  }
}
